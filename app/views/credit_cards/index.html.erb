<h1>Listing credit_cards</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Number</th>
      <th>Month</th>
      <th>Year</th>
      <th>Ccv</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_cards.each do |credit_card| %>
      <tr>
        <td><%= credit_card.first_name %></td>
        <td><%= credit_card.last_name %></td>
        <td><%= credit_card.number %></td>
        <td><%= credit_card.month %></td>
        <td><%= credit_card.year %></td>
        <td><%= credit_card.ccv %></td>
        <td><%= link_to 'Show', credit_card %></td>
        <td><%= link_to 'Edit', edit_credit_card_path(credit_card) %></td>
        <td><%= link_to 'Destroy', credit_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

